<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameOfPlanter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planter Name"
            android:fontFamily="casual"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/numberOfTrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No of Trees"
            android:layout_below="@id/nameOfPlanter"
            android:fontFamily="casual"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/coordinatesOfTrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tree Coordinate"
            android:layout_below="@id/numberOfTrees"
            android:fontFamily="casual"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/typeOfTrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type of tree(s)"
            android:layout_below="@id/coordinatesOfTrees"
            android:fontFamily="casual"
            android:padding="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>