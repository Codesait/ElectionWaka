<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iduma.tree_tracking.Activities.UserProfile">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/iv_userImage"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:src="@drawable/prof"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="16dp"
           android:layout_marginTop="14dp"
           />

       <ImageView
           android:id="@+id/iv_add_userimage"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_alignBottom="@id/iv_userImage"
           android:layout_alignEnd="@id/iv_userImage"
           android:layout_alignRight="@id/iv_userImage"
           app:srcCompat="@drawable/ic_photo_camera" />
       <TextView
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           android:layout_below="@id/iv_add_userimage"
           android:id="@+id/userName"
           android:padding="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="User Name"
           android:textColor="@color/colorGreen"/>
       <TextView
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           android:layout_below="@id/userName"
           android:id="@+id/userLocation"
           android:padding="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Location"
           android:textColor="@color/colorGreen"/>
       <TextView
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           android:layout_below="@id/userLocation"
           android:id="@+id/userPointText"
           android:padding="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Total No of Trees planted: "
           android:textColor="@color/colorGreen"/>
       <TextView
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           android:layout_below="@id/userLocation"
           android:layout_toRightOf="@id/userPointText"
           android:id="@+id/userPoint"
           android:padding="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0 "
           android:textColor="@color/colorGreen"/>
   </RelativeLayout>

</RelativeLayout>
